{
  "name": "@akhilpal/gmail-mcp-server",
  "version": "3.0.0",
  "description": "Complete Gmail Client MCP Server v3.0.0 with subscription management, email composition, and full Gmail functionality",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "gmail-mcp-server": "dist/index.js",
    "gmail-mcp": "dist/index.js"
  },
  "preferGlobal": true,
  "scripts": {
    "build": "tsc --project . && npm run fix-shebang",
    "fix-shebang": "node -e \"const fs=require('fs'); const content=fs.readFileSync('dist/index.js','utf8'); fs.writeFileSync('dist/index.js','#!/usr/bin/env node\\n'+content);\"",
    "postbuild": "echo 'Build completed with executable shebang'",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "setup": "tsx src/setup-gmail.ts",
    "setup:fresh": "rm -f token.json && npm run setup",
    "clean": "rm -rf dist",
    "rebuild": "npm run clean && npm run build",
    "debug": "NODE_ENV=development tsx src/index.ts",
    "test": "echo \"Complete Gmail MCP Server v3.0.0 - Full Gmail functionality including subscription management!\"",
    "check-auth": "node -e \"try { const fs = require('fs'); const token = JSON.parse(fs.readFileSync('token.json', 'utf8')); console.log('✅ Gmail authorization found - Client ID:', token.client_id ? 'Valid' : 'Invalid'); } catch(e) { console.log('❌ No Gmail authorization found. Run: npm run setup'); }\"",
    "prepublishOnly": "npm run rebuild",
    "postinstall": "echo 'Gmail MCP Server installed successfully! Run: gmail-mcp-server'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/akhilpal/gmail-mcp-server.git"
  },
  "homepage": "https://github.com/akhilpal/gmail-mcp-server#readme",
  "bugs": {
    "url": "https://github.com/akhilpal/gmail-mcp-server/issues"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "gmail",
    "mcp",
    "model-context-protocol", 
    "ai",
    "email",
    "claude",
    "anthropic",
    "productivity",
    "email-management",
    "subscription-management",
    "unsubscribe",
    "email-composition",
    "gmail-client",
    "email-automation"
  ],
  "author": "Akhil",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.0.13",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@google-cloud/local-auth": "^3.0.1",
    "@modelcontextprotocol/sdk": "^1.0.7",
    "dotenv": "^17.2.0",
    "google-auth-library": "^10.1.0",
    "googleapis": "^152.0.0",
    "openai": "^5.9.0",
    "zod": "^3.25.76"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
